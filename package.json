    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "relay": "node -r ts-node/register relay/RelayService.ts",
    "relay:dev": "nodemon -r ts-node/register relay/RelayService.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
