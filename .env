# NoirCard Environment Configuration
# Copy this file to .env and fill in your actual values

# Contract Addresses (replace with actual deployed contract addresses)
NEXT_PUBLIC_NOIRCARD_ADDRESS=0x1234567890123456789012345678901234567890
NEXT_PUBLIC_ABUSE_ESCROW_ADDRESS=0x0987654321098765432109876543210987654321

# Redis Configuration for RelayService
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Relay Service Configuration
RELAY_PORT=3001
RELAY_HOST=localhost

# Midnight Network Configuration (Local Development)
MIDNIGHT_NETWORK_URL=http://localhost:8080
MIDNIGHT_PROOF_SERVER_URL=http://localhost:8080
MIDNIGHT_GRPC_URL=localhost:9090
MIDNIGHT_CHAIN_ID=midnight-local

# Security Configuration
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/noircard.log

# Bond Configuration Defaults
DEFAULT_BOND_AMOUNT=3000000  # 3 ADA in lovelace
DEFAULT_BOND_TTL=86400       # 24 hours in seconds
