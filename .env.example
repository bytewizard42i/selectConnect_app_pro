# NoirCard Environment Configuration
# Copy this file to .env and fill in your actual values

# Contract Addresses (replace with actual deployed contract addresses)
NEXT_PUBLIC_NOIRCARD_ADDRESS=0x1234567890123456789012345678901234567890
NEXT_PUBLIC_ABUSE_ESCROW_ADDRESS=0x0987654321098765432109876543210987654321

# Midnight Network Configuration
MIDNIGHT_NETWORK=local
MIDNIGHT_RPC_URL=ws://localhost:9944
MIDNIGHT_HTTP_URL=http://localhost:9933
MIDNIGHT_CHAIN_ID=local-dev

# Midnight Proof Server (Docker)
PROOF_SERVER_URL=http://localhost:6300
PROOF_SERVER_METRICS=http://localhost:6301

# Contract Addresses (after deployment)
NOIRCARD_PROTOCOL_ADDRESS=
NOIRCARD_PROTOCOL_DEPLOY_TX=

# Redis Configuration (from docker-compose)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=noircard_redis_2024

# Relay Service
RELAY_PORT=3001
RELAY_CORS_ORIGIN=http://localhost:3000
RELAY_SECRET_KEY=your-relay-secret-key-here

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_CONTRACT_ADDRESS=
NEXT_PUBLIC_PROOF_SERVER_URL=http://localhost:6300

# Bull Dashboard
BULL_BOARD_URL=http://localhost:3002

# Security Configuration
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/noircard.log

# Bond Configuration Defaults
DEFAULT_BOND_AMOUNT=3000000  # 3 ADA in lovelace
DEFAULT_BOND_TTL=86400       # 24 hours in seconds
